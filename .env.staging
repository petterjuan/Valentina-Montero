# Staging App URL
NEXT_PUBLIC_APP_URL=https://valentina-montero-staging.vercel.app

# MongoDB (Staging)
MONGODB_URI=mongodb+srv://<staging_user>:<staging_password>@<cluster>.mongodb.net/valentina_staging?retryWrites=true&w=majority
MONGODB_DB_NAME=valentina_staging

# Firebase (Staging)
FIREBASE_SERVICE_ACCOUNT_KEY=<base64-encoded-service-account-for-staging>

# Stripe (Staging - Test Mode)
STRIPE_SECRET_KEY=<stripe-test-secret-key>

# Shopify (Staging - Test Store)
SHOPIFY_STORE_DOMAIN=<staging-store-domain>
SHOPIFY_STOREFRONT_ACCESS_TOKEN=<staging-storefront-token>

# Cron Job Secret
CRON_SECRET=<staging-cron-secret>
